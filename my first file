using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Array;

namespace ConsoleApplication18
{
    class Program
    {
        static void Main()
         {
            int[] x = { 30, 10, 80, 90, 20 };
            Console.WriteLine("Array before sorting");

            foreach (int i in x)
            {
            
                Console.Write(" " + i);
                Console.WriteLine();
            }

                Array.Sort(x);
                Array.Reverse(x);
                Console.WriteLine("Array after sorting and reversing");

                foreach (int i in x)
                {
                    Console.Write(" " + i);
                    Console.WriteLine();
                }
                    Console.ReadKey();
                
        }
    }
}


